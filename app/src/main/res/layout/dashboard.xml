<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.msoh.thirtydays.Habit">

    <TextView
        android:id="@+id/habit_username"
        android:text="Test Debug = Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/habit_habitName"
        android:text="Test Debug = Habit Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/habit_streak"
        android:text="Test Debug = Streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/notifications_pending"
        android:text="Test Debug = Streak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/onClickAddProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I've Done it Today!"
        android:onClick="onClickAddProgress"/>

    <Button
        android:id="@+id/onClickGoToVerification"
        android:text="Go to Verification Page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickGoToVerification"/>

</LinearLayout>
