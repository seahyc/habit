<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".One">



    <TextView android:id="@+id/name_prompt"
        android:text="@string/name_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/habit_name"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Run!"
        android:layout_weight="0"/>

    <TextView android:id="@+id/description_prompt"
        android:text="@string/description_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/habit_description"
        android:layout_width ="wrap_content"
        android:layout_height="wrap_content"
        android:hint="run five miles daily"
        android:layout_weight="0"/>

    <ListView
        android:id="@+id/friend_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/partner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/partner" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save it. "/>

</LinearLayout>
